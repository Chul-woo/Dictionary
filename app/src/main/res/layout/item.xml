<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/dictionary_imageview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/engname_textview"
        android:layout_width="194dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/dictionary_imageview"
        android:layout_marginStart="44dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/dictionary_imageview"
        android:textSize="30dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/dictionary_imageview"
        app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
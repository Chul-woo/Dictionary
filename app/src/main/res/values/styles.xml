<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/littlePrinceTextViewStyle</item>
        <item name="android:buttonStyle">@style/littlePrinceButtonStyle</item>
        <item name="android:editTextStyle">@style/littlePrinceEditTextStyle</item>
    </style>

    <style name="littlePrinceTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/little_prince</item>
    </style>
    <style name="littlePrinceButtonStyle" parent="@android:style/Widget.DeviceDefault.Button">
        <item name="android:fontFamily">@font/little_prince</item>
    </style>
    <style name="littlePrinceEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/little_prince</item>
    </style>

</resources>
